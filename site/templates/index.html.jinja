{% extends "_base.html.jinja" %}


{%macro render_paragraph(text) -%}
{% for paragraph in text.split('\n\n') %}
<p class="leading-relaxed">{{ paragraph }}</p>
&nbsp;
{% endfor %}
{%- endmacro %}

{% block body %}
<div class="flex sm:justify-between justify-center flex-wrap sm:flex-nowrap">
    <div class="shrink-0">
      <img src="static/img/{{profile_image}}" alt="Profile Image" class="w-56 h-56 mb-2">
      <p><a href="static/files/cv.pdf" class="text-fuchsia-600 hover:text-fuchsia-800">CV </a>(Updated in: {{cv_update_date}})</p> 
      <p>Email: {{email_address}}</p>  <!--#   -->  
    </div>
    <div class="sm:ml-12 sm:grow">
      <h2 class="font-bold text-6xl tracking-wide mt-8 mb-4">{{ name }}</h2>
      <div>
        {%markdown%}
        {{ bio }}
        {%endmarkdown%}
      </div>
    </div>
</div>
{% endblock %}

